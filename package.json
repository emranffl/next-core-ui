{
	"name": "next-core-ui",
	"version": "0.0.0-development",
	"description": "",
	"scripts": {
		"commit": "git-cz",
		"docify": "npx typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts --hideBreadcrumbs --hideInPageTOC && rm -r docs/README.md",
		"rollup": "rm -r dist --force && rollup -c --bundleConfigAsCjs",
		"semantic-release": "semantic-release --branches main",
		"update-icon-names": "node ./src/components/Icon/bootstrap-icons/names-generator.js && node ./src/components/Icon/material-icons/names-generator.js"
	},
	"type": "module",
	"keywords": [
		"next.js",
		"tailwindcss",
		"components"
	],
	"author": "Emran Hossain",
	"license": "MIT",
	"dependencies": {
		"commitizen": "^4.3.0",
		"tailwind-merge": "^1.13.1"
	},
	"devDependencies": {
		"@babel/core": "^7.22.5",
		"@babel/plugin-transform-runtime": "^7.21.4",
		"@babel/preset-env": "^7.21.5",
		"@babel/preset-react": "^7.18.6",
		"@rollup/plugin-babel": "^6.0.3",
		"@rollup/plugin-commonjs": "^25.0.0",
		"@rollup/plugin-node-resolve": "^15.0.2",
		"@rollup/plugin-terser": "^0.4.1",
		"@rollup/plugin-typescript": "^11.1.1",
		"@types/node": "^20.2.5",
		"@types/react": "^18.2.6",
		"bootstrap-icons": "^1.10.5",
		"cz-conventional-changelog": "^3.3.0",
		"material-icons": "^1.13.7",
		"next": "^13.4.4",
		"prettier": "^2.8.8",
		"react": "^18.2.0",
		"react-reveal": "^1.2.2",
		"rollup": "^3.21.6",
		"rollup-plugin-dts": "^5.3.0",
		"rollup-plugin-flat-dts": "^2.1.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-polyfill-node": "^0.12.0",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-scss": "^4.0.0",
		"sass": "^1.62.1",
		"semantic-release": "^21.0.2",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.0",
		"typedoc": "^0.24.7",
		"typedoc-plugin-markdown": "^3.15.3",
		"typescript": "^5.0.4"
	},
	"source": "src/index.ts",
	"module": "dist/index.min.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"LICENSE",
		"src/scss"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/emranffl/next-core-ui"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"release": {
		"branches": [
			{
				"name": "main"
			}
		]
	}
}
